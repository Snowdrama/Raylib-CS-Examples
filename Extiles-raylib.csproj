<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <RootNamespace>Extiles_raylib</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Raylib-cs" Version="7.0.2" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Content\" />
  </ItemGroup>

  <Target Name="CopyCustomContentOnPublish" AfterTargets="AfterBuild">
    <ItemGroup>
      <ContentFiles Include="./Content/**/*.*" />
      <Copy SourceFiles="@(ContentFiles)" DestinationFolder="$(OutDir)/Content/%(RecursiveDir)" />
    </ItemGroup>
  </Target>
</Project>
